{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4",
    "msteams": {
        "width": "Full"
    },
    "body": [
        {
            "type": "TextBlock",
            "text": "Agile Focus",
            "wrap": true,
            "fontType": "Monospace",
            "size": "ExtraLarge",
            "weight": "Bolder",
            "color": "Attention",
            "horizontalAlignment": "Center"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "ðŸ“… Tommorrow",
                            "wrap": true
                        },
                        {
                            "type": "FactSet",
                            "facts":@{outputs('Composes_and_sorts_the_list_of_events')}
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "âœ… Due Tasks",
                            "wrap": true
                        },
                        {
                            "type": "FactSet",
                            "facts":@{outputs('Compose_and_sort_tasks')}
                        }
                    ]
                }
            ]
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "''@{outputs('GetQuote')?['body/field_1']}''",
                    "weight": "Bolder",
                    "size": "ExtraLarge",
                    "color": "Attention",
                    "italic": true
                }
            ],
            "horizontalAlignment": "Center",
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "ðŸ’¬",
            "wrap": true,
            "horizontalAlignment": "Center",
            "size": "ExtraLarge"
        },
        {
            "type": "TextBlock",
            "text": "@{outputs('GetQuote')?['body/Title']}",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "horizontalAlignment": "Center",
            "weight": "Default",
            "isSubtle": false,
            "color": "Attention"
        },
        {
            "type": "TextBlock",
            "text": "@{outputs('GetQuote')?['body/Title']} on [Wikipedia](@{outputs('GetQuote')?['body/field_2']})",
            "wrap": true,
            "horizontalAlignment": "Right",
            "size": "Small",
            "isSubtle": false,
            "color": "Attention",
            "spacing": "ExtraLarge"
        }
    ]
}